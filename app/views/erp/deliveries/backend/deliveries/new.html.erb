<% content_for :title do %>
    <%= t('.'+@delivery.delivery_type) %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_deliveries.backend_deliveries_path %>">
    <i class="fa fa-opencart"></i> <%= t('.deliveries') %>
    </a> / <%= t('.'+@delivery.delivery_type) %>
<% end %>

<% content_for :page_toolbar do %>
    <div class="btn-group">
        <div class="clearfix">
        </div>
    </div>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @delivery.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', delivery: @delivery, order_id: @order.id %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>